actor user

participant Leaderboard as L
participant DatabaseHelperClass as db

activate user
user -> L: view leaderboard (username)
        activate L
                L -> db: get XP (user)
                activate db
                        db --> L : XP
                        
                                        deactivate db
                                L -> db: get leaderboard data
                                activate db
                                        db --> L: leaderboard data
                                deactivate db
                                L --> user: local leaderboard
